<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        />

    <TextView
        android:textSize="25sp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_C"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="C"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_present"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_present"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="%"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_del"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_C"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="DEL"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_add"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_present"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_del"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/seven"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_C"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/eight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/btn_present"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/nine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_mul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/btn_del"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/btn_mul"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="*"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/btn_add"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/four"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/five"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/eight"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/six"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/btn_div"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/btn_div"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/six"
        app:layout_constraintTop_toBottomOf="@+id/btn_mul"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/one"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/two"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_sub"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six"
        app:layout_constraintVertical_bias="0.5"
        />

    <Button
        android:background="@drawable/new_style_btn"
        android:textSize="20sp"
        android:id="@+id/btn_sub"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/btn_div"
        app:layout_constraintVertical_bias="0.5"
        />


    <Button
        android:id="@+id/zero_zero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="00"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/zero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <Button
        android:id="@+id/zero"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_dot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero_zero"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_equal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_style_btn"
        android:text="="
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_sub" />
</androidx.constraintlayout.widget.ConstraintLayout>


